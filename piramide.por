programa
{
	
	funcao inicio()
	{
		inteiro m, l
		m=4
		l=0

		para (inteiro c=1; c<=m; c++)
			{
				para (l= m-c; l>0; l--)
					escreva (" ")
				para (inteiro j=1; j<=(c*2)-1; j++)
					escreva ("*")		
			escreva ("\n")
			}
				
	}
			
}		

		

